<%- include('../partials/header') %>

<div class="container-fluid-content container-content">
	<div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Edit <%= recipe.title %></h1>
			<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="recipe[title]" placeholder="title" value="<%= recipe.title %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="recipe[image]" placeholder="image url" value="<%= recipe.image %>">
				</div>
				<div class="form-group">
					<textarea id="content" name="recipe[content]" rows="10" cols="80"><%= recipe.content %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/">Go Back</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>