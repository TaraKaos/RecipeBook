<%- include('../Partials/header') %>

<div class="container-fluid-content recipes">
    <% recipes.forEach(function(recipe){ %>
        <div class="row recipe">
            <h3 class="recipe-title"><%= recipe.title %></h3>
            <form action="/Recipes/<%= recipe._id %>">
                <button type="link" class="btn btn-success">View</button>
            </form>
            <form action="/Recipes/<%= recipe._id %>/Edit" method="GET">
                <button type="link" class="btn btn-warning">Edit</button>
            </form>
            <form class="delete-form" action="/Recipes/<%= recipe._id %>?_method=DELETE" method="POST">
                <button type="link" class="btn btn-danger">Delete</button>
            </form>  
        </div>
    <% }); %>
    <a class="btn btn-primary btn-lg new-recipe-btn" href="/Recipes/new">Create New Recipe</a>
</div>

<%- include('../Partials/footer') %>