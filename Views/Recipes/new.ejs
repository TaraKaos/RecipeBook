<%- include("../partials/header") %>

<div class="container-fluid new-recipe">
	<div class="row">
        <h1 class="title-center">Create a New Recipe</h1>
    </div>
    <div class="row">
		<div style="width: 50%; margin: 25px auto;">
			<form action="/recipes" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="title" placeholder="Title">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image URL">	
				</div>
				<div class="form-group">
					<textarea id="ingredients" name="ingredients" rows="10" cols="90" placeholder="Recipe Ingredients"></textarea>
				</div>
                <div class="form-group">
					<textarea id="directions" name="directions" rows="10" cols="90" placeholder="Recipe Directions"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>	
				</div>
			</form>
			<a href="/">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>